{
  "mcpServers": {
    "featuresTeamsMcpContainer": {
      "command": "podman",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name",
        "features-teams-container",
        "--env-file",
        "~/.rh-features-teams.env",
        "-v",
        "/path/to/your/slack_dumps:/app/slack_dumps",
        "features-teams:latest"
      ],
      "description": "Containerized Features Teams MCP server with static image and container names"
    }
  }
}
