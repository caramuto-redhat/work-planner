{
  "mcpServers": {
    "workPlannerMcpContainer": {
      "command": "podman",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name",
        "work-planner-container",
        "--env-file",
        "~/.rh-work-planner.env",
        "-v",
        "/path/to/your/slack_dumps:/app/slack_dumps",
        "work-planner:latest"
      ],
      "description": "Containerized Work Planner MCP server with static image and container names"
    }
  }
}
